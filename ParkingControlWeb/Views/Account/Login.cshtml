@using ParkingControlWeb.ViewModels.Account;

@model LoginViewModel

@{
	ViewData["Title"] = "ورود به حساب کاربری";
}

<html>

    <head>
        <style>

            .form-floating > label {
                right: 0;
                left: auto;
            }

            body {
                overflow: hidden;
            }
        </style>


    </head>

    <body>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <section class="vh-100">
        <div class="container h-100">
            <div class="row d-flex align-items-center justify-content-center h-100">
                <div class="col-xl-6 col-sm-10 col-md-10">
                    <form asp-action="Login">
                        <div class="form-floating mb-3 justify-content-star3t">
                            <input asp-for="UserName" type="text" maxlength="11" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com">
                            <label asp-for="UserName" for="floatingInput" class="ms-0"></label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" maxlength="50" class="form-control rounded-3" id="floatingPassword" placeholder="Password">
                            <label asp-for="Password" for="floatingPassword"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">ورود</button>
                    </form>
                </div>
                <div class="col-xl-5 d-none d-xl-block d-md-none d-sm-none d-xs-none">
                    <img src="https://cdni.iconscout.com/illustration/premium/thumb/man-holding-key-and-unlocking-safe-5753796-4823076.png?f=webp"
                         class="img-fluid" alt="Phone image">
                </div>
            </div>
        </div>
    </section>

    </body>


</html>
