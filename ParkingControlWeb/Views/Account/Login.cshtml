@using ParkingControlWeb.ViewModels

@model LoginViewModel

@{
	ViewData["Title"] = "ورود به حساب کاربری";
}

<html>

    <head>
        <style>

            .form-floating > label {
                right: 0;
                left: auto;
            }
        </style>


    </head>

    <body>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
        <div class="modal-dialog">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header p-5 pb-4 border-bottom-0">
                    <h1 class="fw-bold mb-0 fs-2">ورود به حساب کاربری</h1>
                </div>

                <div class="modal-body p-5 pt-0">
                    <form asp-action="Login">
                        <div class="form-floating mb-3 justify-content-star3t">
                            <input asp-for="UserName" type="text" maxlength="11" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com">
                            <label asp-for="UserName" for="floatingInput" class="ms-0"></label>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Password" type="password" maxlength="50" class="form-control rounded-3" id="floatingPassword" placeholder="Password">
                            <label asp-for="Password" for="floatingPassword"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">ورود</button>
                        <hr class="my-4">
                    </form>
                </div>
            </div>
        </div>


    </body>



</html>
