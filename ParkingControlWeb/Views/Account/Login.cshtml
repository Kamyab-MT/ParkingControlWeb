@using ParkingControlWeb.ViewModels.Account;

@model LoginViewModel

@{
	ViewData["Title"] = "ورود به حساب کاربری";
}

<html>

    <head>
        <style>

            .form-floating > label {
                right: 0;
                left: auto;
            }

            body {
                overflow: hidden;
                background-color: #221c5a;
                background-image: url(../img/parking.jpg);
                background-repeat: no-repeat;
                background-position: center top;
                background-size: cover;
            }
        </style>


    </head>

    <body>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <div class="container">
        <div class="row justify-content-center align-items-center py-5 py-sm-0" style="min-height: 100vh;">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="text-center">
                    <div class="row d-flex align-items-center justify-content-center h-100">

                        <form asp-action="Login">
                            <div class="form-floating mb-3 justify-content-star3t">
                                <input asp-for="UserName" type="text" maxlength="11" class="form-control rounded-3 opacity-75" id="floatingInput" placeholder="name@example.com">
                                <label asp-for="UserName" for="floatingInput" class="ms-0"></label>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" type="password" maxlength="50" class="form-control rounded-3 opacity-75" id="floatingPassword" placeholder="Password">
                                <label asp-for="Password" for="floatingPassword"></label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="row">
                                <div class="col-8">
                                    <button class="w-100 mb-2 btn btn-lg rounded-3 btn-info" type="submit">ورود</button>
                                </div>
                                <div class="col-4">
                                    <a asp-controller="Home" asp-action="Index" class="w-100 mb-2 btn btn-lg rounded-3 btn-outline-info" type="submit">بازگشت</a>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    </body>


</html>
