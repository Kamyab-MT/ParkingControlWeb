@using ParkingControlWeb.ViewModels

@model LoginViewModel

@{
	ViewData["Title"] = "ورود به حساب کاربری";
}


<div class="modal-dialog">
    <div class="modal-content rounded-4 shadow">
        <div class="modal-header p-5 pb-4 border-bottom-0">
            <h1 class="fw-bold mb-0 fs-2">ورود به حساب کاربری</h1>
        </div>

        <div class="modal-body p-5 pt-0">
            <form asp-action="Login">
                <div class="form-floating mb-3">
                    <input asp-for="EmailAddress" type="email" class="form-control rounded-3" id="floatingInput" placeholder="name@example.com">
                    <label asp-for="EmailAddress" for="floatingInput"></label>
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" type="password" class="form-control rounded-3" id="floatingPassword" placeholder="Password">
                    <label asp-for="Password" for="floatingPassword"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">ورود</button>
                <hr class="my-4">
            </form>
        </div>
    </div>
</div>
