<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width: auto; height: 100vh; position:fixed;">
    <a class="d-flex align-items-center link-dark text-decoration-none" style="user-select: none;">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
        @if (!User.IsInRole("Driver"))
        {
            <h3 class="fs-4 me-0">نام پارکینگ</h3>
        }
        else
        {
            <h3 class="fs-4 me-0">ناحیه کاربری</h3>
        }
    </a>
    <hr>
    @if (!User.IsInRole("Driver"))
    {
        <ul class="nav nav-pills flex-column mb-auto">


            @if (!User.IsInRole("GlobalAdmin"))
            {
                <li class="nav-item">
                    <a href="#" class="nav-link active" aria-current="page">
                        داشبورد
                        <i class="bi bi-speedometer2"></i>
                    </a>
                </li>

                @if (User.IsInRole("SystemAdmin"))
                {
                    <li class="nav-item">
                        <a href="#" class="nav-link link-dark" aria-current="page">
                            لیست کارشناس ها
                            <i class="bi bi-people-fill"></i>
                        </a>
                    </li>

                    <li>
                        <a href="#" class="nav-link link-dark">
                            گزارش گیری
                            <i class="bi bi-clipboard-data"></i>
                        </a>
                    </li>
                }
            }
            else
            {
                <li class="nav-item">
                    <a href="#" class="nav-link active" aria-current="page">
                        لیست صاحبین پارکینگ
                        <i class="bi bi-people-fill"></i>
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="#" class="nav-link active" aria-current="page">
                    شارژ حساب
                    <i class="bi bi-wallet2"></i>
                </a>
            </li>
        </ul>
    }
</div>