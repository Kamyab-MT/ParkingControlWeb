<div class="d-flex flex-column flex-shrink-0 p-3 bg-light" style="width : 15vw; max-width: 15vw; height: 100vh; position:fixed;">
    <a class="d-flex align-items-center link-dark text-decoration-none" style="user-select: none;">
        <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
        <h3 class="fs-4 me-0">ناحیه کاربری</h3>

    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">

    @{
            var action = ViewContext.RouteData.Values["Action"].ToString();
            var controller = ViewContext.RouteData.Values["Controller"].ToString();
    }

