@* @model ChargeDriverViewModel *@

@{
    ViewData["Title"] = "شارژ کردن حساب راننده";
}

<html>

    <head>

        <style>

            .form-floating > label {
                right: 0;
                left: auto;
            }

            .dropdown-toggle::after {
                display: none;
            }

        </style>

    </head>

    <body>

    <div class="container-fluid p-5">

        <h1 class="fw-bold mb-0">
            شارژ حساب راننده
        </h1>

        <div class="row mt-5">

            <form asp-action="ChargeDriver">

                <input type="hidden" name="DriverId" id="requestIdInput" />
                <div class="row">
                    <div class="col-8 d-flex align-items-center">

                        <div class="form-floating mb-3 justify-content-star3t form-group w-100">
                            <input name="Amount" dir="ltr" class="form-control rounded-3" id="floatingInput12" placeholder="1000">
                            <label for="floatingInput12" class="ms-0">مبلغ</label>
                        </div>
                    </div>

                    <div class="col-4 d-flex align-items-center">
                        <span class="">تومان</span>
                    </div>

                    <div class="col-12 d-flex align-items-center">
                        <p class="text text-info">*مبلغ وارد شده باید بین 10 هزار تومان تا 10 میلیون تومان باشد</p>
                    </div>
                </div>
                <span class="text-danger"></span>
                <div class="row mt-2">
                    <div class="form-floating mb-3 justify-content-star3t form-group">
                        <input name="CardNumber" type="text" class="form-control rounded-3" id="floatingInput8" placeholder="XXXX-XXXX-XXXX-XXXX">
                        <label for="floatingInput8" class="ms-0">شماره کارت</label>
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-floating mb-3 justify-content-star3t form-group">
                        <input name="OwnerName" type="text" class="form-control rounded-3" id="floatingInput9" placeholder="نام صاحب کارت">
                        <label for="floatingInput9" class="ms-0">نام صاحب کارت</label>
                        <span class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="form-floating mb-3 justify-content-star3t form-group">
                        <input name="TrackingCode" type="text" class="form-control rounded-3" id="floatingInput11" placeholder="کد رهگیری" value="-">
                        <label for="floatingInput11" class="ms-0">کد پیگیری</label>
                        <span class="text-info">در صورت نداشتن کد پیگیری - بذارید</span>
                    </div>
                </div>

                <div class="row">
                    <button class="btn btn-lg btn-success mt-5 form-control rounded-3" type="submit">شارژ و ثبت تراکنش</button>
                </div>

            </form>

        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var numberInput = document.getElementById('floatingInput12');

            numberInput.addEventListener('input', function () {
                var inputValue = parseFloat(numberInput.value.replace(/,/g, ''));
                if (!isNaN(inputValue)) {
                    numberInput.value = inputValue.toLocaleString();
                }
            });
        });
    </script>

    </body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</html>