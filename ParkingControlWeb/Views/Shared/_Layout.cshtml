<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ParkingControlWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/jquery.iranaddressjs/0.5.0/jquery.iranaddressjs.js"></script>

    <style>

        body {
            overflow-x: hidden;
            background-color: #FFFFFF;
        }
        ::selection
        {
            background-color: #004887;
            color : white;
        }

        .btn:hover :not(.active) {
            opacity: 0.75;
        }

        .highlight {
            background-color: yellow;
            font-weight: bold;
        }


    </style>
</head>
<body>

    @if (!User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#004887;" aria-label="Fifth navbar example">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsExample05" aria-controls="navbarsExample05" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div id="navbarsExample05" class="collapse navbar-collapse">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ml-2">
                            <li class="nav-item">
                                <a class="nav-link btn btn-success text-white" aria-current="page" asp-controller="Account" asp-action="Login">ورود به حساب کاربری</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    @if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div class="col-2">
                @if (User.Identity.IsAuthenticated)
                {
                    <partial name="_Sidebar.cshtml" />
                }
            </div>
            <div class="col-10 animate__animated animate__fadeIn">
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        <partial name="_Notification.cshtml" />
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container-fluid animate__animated animate__fadeIn" style="padding:0px;">
            <main role="main">
                <partial name="_Notification.cshtml" />
                @RenderBody()
            </main>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
