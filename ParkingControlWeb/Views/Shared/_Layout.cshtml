<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=1920, user-scalable=no">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ParkingControlWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/jquery.iranaddressjs/0.5.0/jquery.iranaddressjs.js"></script>

    <style>

        body {
            overflow-x: hidden;
            background-color: #FFFFFF;
        }
        ::selection
        {
            background-color: #004887;
            color : white;
        }

        .btn:hover :not(.active) {
            opacity: 0.75;
        }

        .highlight {
            background-color: yellow;
            font-weight: bold;
        }


    </style>
</head>
<body>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            <div class="col-2">
                @if (User.Identity.IsAuthenticated)
                {
                    <partial name="_Sidebar.cshtml" />
                }
            </div>
            <div class="col-10 animate__animated animate__fadeIn">
                <div class="container-fluid">
                    <main role="main" class="pb-3">
                        <partial name="_Notification.cshtml" />
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container-fluid animate__animated animate__fadeIn" style="padding:0px;">
            <main role="main">
                <partial name="_Notification.cshtml" />
                @RenderBody()
            </main>
        </div>
    }

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <div class="col-10">
                    </div>
                    <div class="col-2 text-start">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
                <div class="modal-body" id="modal-body-content">
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="myModalBg" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <div class="col-10">
                    </div>
                    <div class="col-2 text-start">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true"></span>
                        </button>
                    </div>
                </div>
                <div class="modal-body" id="modal-body-content-bg">
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
