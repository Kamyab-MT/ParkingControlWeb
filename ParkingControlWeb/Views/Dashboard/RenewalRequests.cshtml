@using ParkingControlWeb.ViewModels.List

@{
    ViewData["Title"] = "درخواست های تمدید";
}

@model List<RenewalRequestReceivedViewModel>

<html>

    <head>

        <style>

            td, th {
                text-align: center;
            }

        </style>
    </head>

<body>

    <div class="container-fluid">

        <div class="mt-5">


            <div class="row">

                <div class="col-6">
                    <h3>درخواست های تمدید</h3>
                </div>

            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>نام درخواست دهنده</th>
                        <th>شماره تلفن</th>
                        <th>سرویس مد نظر</th>
                        <th>4 رقم آخر کارت بانکی</th>
                        <th>زمان واریز</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model != null)
                    {
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i+1)</td>
                                <td>@Model[i].Name</td>
                                <td>@Model[i].PhoneNumber</td>
                                <td>@Model[i].Service</td>
                                <td>@Model[i].Card</td>
                                <td>@Model[i].Time</td>
                                <td>
                                    <a asp-controller="Dashboard" asp-action="AcceptRenewal" asp-route-id="@Model[i].Id|@Model[i].Description" class="btn btn-success">تایید</a>
                                    <a asp-controller="Dashboard" asp-action="RejectRenewal" asp-route-id="@Model[i].Id|@Model[i].Description" class="btn btn-danger">رد کردن</a>
                                    <br />
                                    <br />
                                    <textarea asp-for="@Model[i].Description"></textarea>
                                </td>
                            </tr>
                        }

                    }

                </tbody>
            </table>
        </div>

    </div>

</body>

</html>