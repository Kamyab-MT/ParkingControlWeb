@using ParkingControlWeb.ViewModels.List

@{
    ViewData["Title"] = "درخواست های تمدید";
}

@model List<RenewalRequestReceivedViewModel>

<html>


<body>

    <div class="container-fluid">

        <div class="mt-5">


            <div class="row">

                <div class="col-6">
                    <h3>درخواست های تمدید</h3>
                </div>

            </div>

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>نام</th>
                        <th>سرویس مد نظر</th>
                        <th>کارت بانکی</th>
                        <th>کد پیگیری</th>
                        <th>تصویر رسید</th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model != null)
                    {
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@(i+1)</td>
                                <td>@Model[i].PhoneNumber</td>
                                <td>@Model[i].Service</td>
                                <td>@Model[i].Card</td>
                                <td>@Model[i].TrackingCode</td>
                                <td>
                                    @if(Model[i].Pic == "None")
                                    {
                                        <span>-</span>
                                    }
                                    else
                                    {
                                        <img src="@Model[i].Pic" />
                                    }
                                </td>
                            </tr>
                        }

                    }

                </tbody>
            </table>
        </div>

    </div>

</body>

</html>